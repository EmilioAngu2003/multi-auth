@page
@model multi_auth.Pages.ProfileModel
@using System.Security.Claims
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Perfil de Usuario";

    var user = User;
    var userName = user.Identity?.Name ?? "Usuario desconocido";
    var userEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? "No disponible";
    var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "No disponible";
}

<div class="container">
    <h1>Bienvenido, @userName!</h1>

    <p><strong>Email:</strong> @userEmail</p>
    <p><strong>Identificador del usuario:</strong> @userId</p>

    <a href="/auth/logout">Cerrar sesión</a>
    <a href="/auth/logout/all">Cerrar todas las sesiones</a>
</div>
